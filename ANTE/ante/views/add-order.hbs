<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Drive Track</title>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/add-order.js"></script>
    <script type="text/javascript" src="/js/home.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/modal-style.css" />
    <link rel="stylesheet" href="/stylesheets/sweetalert2.min.css">  
    <script 
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBHCAZ59-XRJXCmaKGGeLhGZ_AaQXU5J54&libraries=places"></script>
    <script src="/js/sweetalert2.min.js"></script>
</head>

<body onload="cargar()">
        <div class="navigation col-lg-1">
        <h1 class="head-title">
          <a href="http://localhost:3000/main">
            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
               Drive Track
          </a>
        </h1>
        <nav id="navigation">
          <a href="http://localhost:3000/employees">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Repartidores
          </a>
          <a href="http://localhost:3000/orders">
            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
            Pedidos
          </a>
          <a href="http://localhost:3000/tracking">
            <span class="glyphicon glyphicon-screenshot" aria-hidden="true"></span>
            Rastreo
          </a>
        </nav>
      
        <nav id="user_logged">
          <div class="user-image">
            <img id="image-logged" src="images/users/default-admin.png"/>
          </div>
          <span id="identity_name">
          </span>
      
          <a href="http://localhost:3000/user">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
            Mis datos
          </a>
          <a href="#" class="btn-logout">
            <span class="glyphicon glyphicon-log-out" aria-hidden="true" onclick="salir()"></span>
            Salir
          </a>
        </nav>
      </div>

    <div class="col-lg-6 col-lg-offset-2">
        <div class="jumbotron">
            <form class="col-lg-10">
                <h2> REGISTRO DE PEDIDOS</h2>
                </br>
                <p>
                    <label>Descripcion:</label>
                    <textarea id="txtDescripcion" rows="10" cols="50" placeholder="Registrar los productos de la orden..." oninput="enable()"></textarea>
                </p>
                    <button type="button" id="btnRuta" onclick="modalRuta()" class="btn btn-primary">Agregar</button>
                </br>

            </form>
        </div>
    </div>
    
    <!--Modal Rutas-->
    
    <div id="modalRutas" class="modal">
      <div class="modal-content">
          <div class="modal-header">
            <span class="close" onclick="cerrarModal(0)">&times;</span>
            <h3>Agregue la direccion del pedido</h3>
          </div>
            
          <div class="modal-body">
            <input id="pac-input" class="controls" type="text" placeholder="Introduzca una direccion"> 
            <div class="container" id="map-canvas" style="height:420px;"></div>
          </div>

          <div class="modal-footer">
              <a onclick="repartidores()"><h3 class="btn btn-secondary" style="margin-bottom: 10px">Guardar</h3></a>
          </div>

      </div>
    </div>


    <!--Modal Repartidores-->
    
    <div id="modalRepartidores" class="modal">
      <div class="modal-content">
          <div class="modal-header">
            <span class="close" onclick="cerrarModal(1)">&times;</span>
            <h3>Selecciona el repartidor deseado</h3>
          </div>
            
          <div class="modal-body">
             <div class="scrollbar">
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Imagen</th>
                      <th scope="col">Nombre</th>
                      <th scope="col">Username</th>
                      <th scope="col">Rol</th>
                      <th scope="col">Acci√≥n</th>
                    </tr>
                  </thead>
                  <tbody id="Empleados"></tbody>
                </table>   
            </div>     
          </div>
      </div>
    </div>

</body>
</html>